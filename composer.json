{
    "name": "artesano-digital/sistema",
    "description": "Sistema de comercio electrónico para artesanos de Panamá Oeste",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Artesano Digital",
            "email": "info@artesanodigital.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "11"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Models\\": "models/",
            "Controllers\\": "controllers/",
            "Utils\\": "utils/",
            "Config\\": "config/",
            "Patrones\\": "patrones/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyse"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
